  <property name="project.jdk.home" value="${jdk.home.10}"/>
  <property name="project.jdk.bin" value="${jdk.bin.10}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.10"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.java-json.classpath">
    <fileset dir="${basedir}/lib/java-json">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="library.lwjgl.classpath">
    <fileset dir="${basedir}/lib/lwjgl-3.1.3/lwjgl">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib/lwjgl-3.1.3/lwjgl-glfw">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib/lwjgl-3.1.3/lwjgl-openal">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib/lwjgl-3.1.3/lwjgl-opencl">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib/lwjgl-3.1.3/lwjgl-opengl">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib/lwjgl-3.1.3/lwjgl-opengles">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib/lwjgl-3.1.3/lwjgl-stb">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
      <include name="forms_rt.jar"/>
    </fileset>
    <fileset dir="${idea.home}/plugins/java/lib">
      <include name="javac2.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Schooled -->
  
  <dirname property="module.schooled.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.schooled" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.schooled" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.schooled" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.schooled" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="schooled.output.dir" value="${module.schooled.basedir}/classes/production/Schooled"/>
  <property name="schooled.testoutput.dir" value="${module.schooled.basedir}/classes/test/Schooled"/>
  
  <path id="schooled.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="schooled.module.production.classpath">
    <path refid="${module.jdk.classpath.schooled}"/>
    <path refid="library.lwjgl.classpath"/>
    <path refid="library.java-json.classpath"/>
  </path>
  
  <path id="schooled.runtime.production.module.classpath">
    <pathelement location="${schooled.output.dir}"/>
    <path refid="library.lwjgl.classpath"/>
    <path refid="library.java-json.classpath"/>
  </path>
  
  <path id="schooled.module.classpath">
    <pathelement location="${schooled.output.dir}"/>
    <path refid="${module.jdk.classpath.schooled}"/>
    <path refid="library.lwjgl.classpath"/>
    <path refid="library.java-json.classpath"/>
  </path>
  
  <path id="schooled.runtime.module.classpath">
    <pathelement location="${schooled.testoutput.dir}"/>
    <pathelement location="${schooled.output.dir}"/>
    <path refid="library.lwjgl.classpath"/>
    <path refid="library.java-json.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.schooled">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.schooled">
    <patternset refid="excluded.from.module.schooled"/>
  </patternset>
  
  <path id="schooled.module.sourcepath">
    <dirset dir="${module.schooled.basedir}">
      <include name="resources"/>
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.schooled" depends="compile.module.schooled.production,compile.module.schooled.tests" description="Compile module Schooled"/>
  
  <target name="compile.module.schooled.production" depends="register.custom.compilers" description="Compile module Schooled; production classes">
    <mkdir dir="${schooled.output.dir}"/>
    <javac2 destdir="${schooled.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.schooled}/javac">
      <compilerarg line="${compiler.args.schooled}"/>
      <bootclasspath refid="schooled.module.bootclasspath"/>
      <classpath refid="schooled.module.production.classpath"/>
      <src refid="schooled.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.schooled"/>
    </javac2>
    
    <copy todir="${schooled.output.dir}">
      <fileset dir="${module.schooled.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.schooled.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.schooled.tests" depends="register.custom.compilers,compile.module.schooled.production" description="compile module Schooled; test classes" unless="skip.tests"/>
  
  <target name="clean.module.schooled" description="cleanup module">
    <delete dir="${schooled.output.dir}"/>
    <delete dir="${schooled.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.schooled" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.schooled" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.schooled:jar" value="${basedir}/classes/artifacts/Schooled_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Schooled.jar" value="${artifacts.temp.dir}/Schooled.jar"/>
  </target>
  
  <target name="artifact.schooled:jar" depends="init.artifacts, compile.module.schooled" description="Build &#39;Schooled:jar&#39; artifact">
    <property name="artifact.temp.output.schooled:jar" value="${artifacts.temp.dir}/Schooled_jar"/>
    <mkdir dir="${artifact.temp.output.schooled:jar}"/>
    <jar destfile="${temp.jar.path.Schooled.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${schooled.output.dir}"/>
